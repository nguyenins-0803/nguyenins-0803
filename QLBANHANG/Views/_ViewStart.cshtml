@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>





        /* Định dạng cho ô tìm kiếm */
        #search-bar {
            width: 300px;
            padding: 10px;
            font-size: 16px;
            border: 2px solid #000; /* Đường viền màu đen */
            border-radius: 25px;
            background-color: lightpink; /* Màu hồng */
            color: #000; /* Chữ màu đen */
            transition: border-color 0.3s ease;
        }

        /* Định dạng cho nút tìm kiếm */
        button[type="submit"] {
            background-color: #000; /* Màu đen */
            color: lightpink; /* Chữ màu trắng */
            border: none;
            padding: 10px 20px;
            margin-left: 10px;
            font-size: 16px;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            /* Hiệu ứng khi rê chuột qua nút */
            button[type="submit"]:hover {
                background-color: #444; /* Màu đen sáng hơn khi hover */
            }
    </style>
</head>
<body>
    <header>


        <h1 style="color: lightpink; font-weight: bold">
            INS LEATHER
        </h1>
        <h2 style="color:black;font:icon">Cửa hàng túi xách và phụ kiện da đa dạng thời trang dành cho cả nam và nữ ở mọi lứa tuổi </h2>
        <form action="/search" method="get" class="search-form">
            <input type="search" id="search-bar" name="q" placeholder="Search...">
            <button type="submit">Search</button>
        </form>
    </header>

    <div class="container">

    </div>

    <footer>
        <!-- Nội dung footer -->
    </footer>


    <p>
        

    </p>

</body>
</html>